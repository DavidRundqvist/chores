@page "/"
@model UpcomingChoresModel
@{
    ViewData["Title"] = "Upcoming Chores";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <!-- Upcoming Chores Section -->
    @if (Model.UpcomingChores.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Chore</th>
                        <th>Frequency</th>
                        <th>Last Performed</th>
                        <th>Due Date</th>
                        <th>Days Until Due</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var choreWithDue in Model.UpcomingChores)
                    {
                        <tr>
                            <td>@choreWithDue.Chore.Name</td>
                            <td>@choreWithDue.Chore.Frequency.TotalDays days</td>
                            <td>
                                @if (choreWithDue.LastPerformed.HasValue)
                                {
                                    @choreWithDue.LastPerformed.Value.ToString("yyyy-MM-dd, HH:mm")
                                }
                                else
                                {
                                    <em>Never</em>
                                }
                            </td>
                            <td>@choreWithDue.NextDueDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (choreWithDue.IsOverdue)
                                {
                                    <span class="badge bg-danger">@Math.Abs(choreWithDue.DaysUntilDue) days overdue</span>
                                }
                                else if (choreWithDue.DaysUntilDue <= 0)
                                {
                                    <span class="badge bg-warning">Due today</span>
                                }
                                else
                                {
                                    <span>@choreWithDue.DaysUntilDue days</span>
                                }
                            </td>
                            <td>
                                <form method="post" style="display:inline;">
                                    <input type="hidden" name="choreId" value="@choreWithDue.Chore.Id" />
                                    <button type="submit" class="btn btn-sm btn-success" formaction="?handler=Done">Done</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Add some chores.
        </div>
    }

</div>
