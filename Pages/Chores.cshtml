@page
@model ChoresModel
@{
    ViewData["Title"] = "Chores";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <!-- Upcoming Chores Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Upcoming Chores</h5>
        </div>
        <div class="card-body">
            @if (Model.UpcomingChores.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Chore</th>
                                <th>Frequency</th>
                                <th>Last Performed</th>
                                <th>Due Date</th>
                                <th>Days Until Due</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var choreWithDue in Model.UpcomingChores)
                            {
                                var rowClass = choreWithDue.IsOverdue ? "table-danger" : 
                                               choreWithDue.DaysUntilDue <= 0 ? "table-warning" : "";
                                
                                <tr class="@rowClass">
                                    <td>@choreWithDue.Chore.Name</td>
                                    <td>@choreWithDue.Chore.Frequency.TotalDays days</td>
                                    <td>
                                        @if (choreWithDue.LastPerformed.HasValue)
                                        {
                                            @choreWithDue.LastPerformed.Value.ToString("yyyy-MM-dd, HH:mm")
                                        }
                                        else
                                        {
                                            <em>Never</em>
                                        }
                                    </td>
                                    <td>@choreWithDue.NextDueDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (choreWithDue.IsOverdue)
                                        {
                                            <span class="badge bg-danger">@Math.Abs(choreWithDue.DaysUntilDue) days overdue</span>
                                        }
                                        else if (choreWithDue.DaysUntilDue <= 0)
                                        {
                                            <span class="badge bg-warning">Due today</span>
                                        }
                                        else
                                        {
                                            <span>@choreWithDue.DaysUntilDue days</span>
                                        }
                                    </td>
                                    <td>
                                        <form method="post" style="display:inline;">
                                            <input type="hidden" name="choreId" value="@choreWithDue.Chore.Id" />
                                            <button type="submit" class="btn btn-sm btn-success" formaction="?handler=Done">Done</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No chores. Add some chores first!
                </div>
            }
        </div>
    </div>

    <!-- Completed Chores Section -->
    <div class="card">
        <div class="card-header">
            <h5>Completed Chores</h5>
        </div>
        <div class="card-body">
            @if (Model.AllRecords.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Chore</th>
                                <th>Performed At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var record in Model.AllRecords.OrderByDescending(r => r.PerformedAt))
                            {
                                var chore = Model.Chores.FirstOrDefault(c => c.Id == record.ChoreId);
                                <tr>
                                    <td>@chore?.Name</td>
                                    <td>@record.PerformedAt.ToString("yyyy-MM-dd, HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No records yet. Mark a chore as done to get started!
                </div>
            }
        </div>
    </div>
</div>
